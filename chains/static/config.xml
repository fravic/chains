<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="2.0.0.0" id="chains">
  
  <author href=""
          rim:copyright="Copyright 2013">Corporation</author>
  
  <name>Don't Break the Chain!</name>
  
  <description>
    A productivity app.
  </description>
  
  <rim:permissions>
    <rim:permit>access_location_services</rim:permit>
    <rim:permit>use_camera</rim:permit>  
  </rim:permissions>
  
  <icon src="img/icon-150.png"/>
    
  <content src="http://dontbreakthechain.herokuapp.com/static/index.html" />

  <access uri="*" subdomains="true">
  
  <feature id="blackberry.ui.contextmenu" />
  <feature id="blackberry.ui.dialog"/>


  <feature id="blackberry.ui.toast" />
  
  <feature id="blackberry.app.orientation">
    <param name="mode" value="portrait" />
  </feature>

  <feature id="blackberry.app" >
    <param name="websecurity" value="disable" />
  </feature>


  <feature id="blackberry.app" required="true" version="1.0.0"/>
  <feature id="blackberry.invoke" required="true" version="1.0.0"/>
  <feature id="blackberry.media.camera" required="true" version="1.0.0.0" />
  <feature id="blackberry.app.event"/>

  <access uri="http://dontbreakthechain.herokuapp.com/" subdomains="true">
    <feature id="blackberry.app.event" required="true" version="1.0.0.0"/>
    <feature id="blackberry.media.camera" />
  </access>

</widget>
